$text-color = $black;
$link-color = $text-color;
$link-color--active = $link-color;

html, body {
  font-size: $font-size-base;
  line-height: 1.5;
  font-family: $font-base;
  color: $text-color;
}

a {
  color: $link-color;
  text-decoration: none;
  
  {hover-focus-active} {
    color: $link-color--active;
    outline: 0;
  }
}

.tp-heading {
  &--big {
    font: bold 36px $font-base;
    text-transform: uppercase;
    
    @media $mobile {
      font-size: (55*100/750)vw;
      text-align: center;
    }
  }
  &--medium {
    font: bold 22px/1 $font-base;
    text-transform: uppercase;
    @media $mobile {
      font-size: (40*100/750)vw;
    }
  }
  &--small {
    font: bold 30px $font-base;
    text-transform: uppercase;
  }
}
.tp-body {
  &--big {
    font-size: 20px;
    @media $mobile {
      font-size: (40*100/750)vw;
    }
  }
  &--medium {
    font-size: 15px;
    line-height: 1.33;
    @media $mobile {
      font-size: (30*100/750)vw;
    }
  }
  &--base {
    font-size: $font-size-base;
    line-height: 1.5;
  }
  &--small {
    font-size: 14px;
  }
  &--smaller {
    font-size: 13px;
  }
}
b, strong {
  font: inherit;
  font-weight: bold;
}
.tp-text {
  for $align in (left right center) {
    &--{$align} {
      text-align: $align;
    }
  }
  &--light {
    opacity: 0.8;
  }
  &--lighter {
    opacity: 0.6;
  }
  &--lightest {
    opacity: 0.5;
  }
  &--upper {
    text-transform: uppercase;
  }
  &--lower {
    text-transform: lowercase;
  }
  &--truncate {
    truncate();
  }
  &--nowrp {
    white-space: nowrap;
  }
}

p {
  margin: 1em 0;
  no-childs-margin();
}
