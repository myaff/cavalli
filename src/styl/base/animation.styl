.slide {
  &__product {
    opacity: 0;
    transition: opacity 0.3s;
  }

  &__trigger {
    opacity: 0;
    transition: opacity 0.3s;

    &.active {
      opacity: 1;
    }
  }
}

.anim-img.stage-out {
  transition: none;
}

.js-trigger {
  opacity: 0;
  transition: opacity 0.3s;

  &.active {
    opacity: 1;
    z-index: 10;
  }
}
.js-product {
  opacity: 0;
  transition: opacity 0.3s;

  &.active.open {
    opacity: 1;
    z-index: 10;
  }
}