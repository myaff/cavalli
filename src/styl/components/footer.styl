.footer {
  padding: 40px 40px 0;

  .layout--mobile & {
    padding: 20px 20px 0;
  }

  &__top {
    padding: 40px 0 30px;
    background: black;
    color: white;

    .layout--mobile & {
      .l-col-6 {
        &:first-child {
          order: 1;
          margin-bottom: 2rem;
        }
        &:nth-child(2) {
          order: 3;
        }
        &:nth-child(3) {
          order: 4;
        }
        &:last-child {
          order: 2;
          margin-bottom: 2rem;
        }
      }
    }
  }

  &__bottom {
    padding: 30px 0;
  }

  &__social {
    margin: 0 auto;
    color: black;
  }
}

.pers {
  &__title {
    font: bold 16px $font-base;
    opacity: 0.5;
  }

  &__name {
    font: 40px/1.25 $font-util;
  }
}