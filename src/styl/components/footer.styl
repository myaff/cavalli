.footer {
  padding: 40px 40px 0;

  .layout--mobile & {
    padding: 20px 20px 0;
  }

  &__top {
    padding: 40px 0 30px;
    background: black;
    color: white;

    .layout--mobile & {
      .l-col-6 {
        &:first-child {
          order: 1;
          margin-bottom: 2rem;
        }
        &:nth-child(2) {
          order: 3;
        }
        &:nth-child(3) {
          order: 4;
        }
        &:last-child {
          order: 2;
          margin-bottom: 2rem;
        }
      }
    }
  }

  &__bottom {
    padding: 40px 0;
  }

  &__social {
    margin: 0 auto;
    color: black;
  }

  &__text {
    text-align: center;
    margin-top: 40px;
    .note {
      font: bold 16px/1.25 $font-base;
      opacity: 0.5;
      max-width: 560px;
      margin: 0 auto;

      .layout--mobile & {
        font-size: 22px;
        line-height: 1.1;
      }
    }
    .title {
      font: bold 40px/1 $font-util;
      text-transform: uppercase;
      margin-top: 10px;

      .layout--mobile & {
        font-size: 60px;
      }
    }
  }
}

.pers {
  &__title {
    font: bold 16px $font-base;
    opacity: 0.5;

    .layout--mobile & {
      font-size: 22px;
    }
  }

  &__name {
    font: 40px/1.25 $font-util;

    .layout--mobile & {
      font-size: 40px;
    }
  }
}