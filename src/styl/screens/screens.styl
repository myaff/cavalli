.screens {
	height: 100vh;
}
.screen {
	size(100%, 100vh);
	padding: 40px;
	absolute(0px, 0px);

	&--0 {
		z-index: 8;

		& .slide--0 .js-trigger {
			top: 31.5vh;
			left: 39vw;

			&::before {
				height: 40px;
				transform: rotate(10deg);
			}
		}
	}

	&--1 {
		z-index: 7;

		& .slide--0 .js-trigger {
			top: 17vh;
			left: 45.7vw;

			&::before {
				height: 130px;
				transform: rotate(-5deg);
			}
		}

		& .slide--1 .js-trigger {
			top: 12vh
			left: 43.5vw;

			&::before {
				height: 90px;
				transform: rotate(15deg);
				left: 30%;
			}
		}
	}

	&--2 {
		z-index: 6;

		& .slide--0 .js-trigger {
			top: 31vh;
			left: 57.3vw;

			&::before {
				height: 60px;
				transform: rotate(-30deg);
				left: 70%;
			}
		}
	}

	&--3 {
		z-index: 5;

		& .slide--0 .js-trigger {
			top: 40.7vh;
			left: 48.5vw;

			&::before {
				height: 40px;
				transform: rotate(-30deg);
				left: 70%;
			}
		}

		& .slide--1 .js-trigger {
			top: 15vh;
			left: 39.5vw;

			&::before {
				height: 60px;
			}
		}
	}

	&--4 {
		z-index: 4;

		& .slide--0 .js-trigger {
			top: 23vh;
			left: 45vw;

			&::before {
				height: 70px;
				transform: rotate(50deg);
				left: 0;
				top: 70%;
			}
		}
	}

	&--5 {
		z-index: 3;

		& .slide--0 .js-trigger {
			top: 33vh;
			left: 48vw;

			&::before {
				height: 80px;
				transform: rotate(45deg);
				left: 5%;
				top: 87%;
			}
		}

		& .slide--1 .js-trigger {
			top: 35vh;
			left: 32.5vw;

			&::before {
				height: 40px;
				transform: rotate(-40deg);
				left: 75%;
				top: 80%;
			}
		}
	}

	&__img {
		absolute(0px, 0px);
		size(100%);

		img {
			display: block;
			//fixed-center();
			absolute-center();
			object-fit: cover;
			min-size(100%);
		}
	}

	&__title {
		font: bold vh(50) / 1.3 $font-accent;
	}

	&__indicators {
		absolute(0, 0px, 90px);
		flexy(center, center);
		size(100%, 10px);

		.dot {
			circle(10px);
			margin: 0 10px;
			border: 1px solid white;
			transition: background 0.3s;

			&.active {
				background: white;
			}
		}
	}
}

.slide {
	size(calc(100% - 80px));
	overflow: hidden;
	absolute(40px, 40px);

	&--main {
		relative(0px, 0px);
		size(100%);
		flexy(center, center);
	}

	&__text,
	&__product {
		absolute(0px);
		size(360px, 100%);
		padding: 2.5rem;
		flexy(flex-start, center);

		.screen--0 .slide--0 &,
		.screen--1 .slide--0 &,
		.screen--2 .slide--0 &,
		.screen--3 .slide--0 &,
		.screen--4 .slide--0 &,
		.screen--5 .slide--1 & {
			left: 0;
		}

		.screen--1 .slide--1 &,
		.screen--3 .slide--1 &,
		.screen--5 .slide--0 & {
			right: 0;
		}
	}
	&__bg {
		absolute(0px, 0px);
		size(100%);

		.screen--0 .slide--0 &,
		.screen--1 .slide--0 &,
		.screen--2 .slide--0 &,
		.screen--3 .slide--1 &,
		.screen--5 .slide--1 & {
			background: rgba(#ffffff, 0.8);
		}

		.screen--1 .slide--1 &,
		.screen--3 .slide--0 &,
		.screen--4 .slide--0 &,
		.screen--5 .slide--0 & {
			background: rgba(#000000, 0.8);
		}
	}

	&__content {
		.screen--0 .slide--0 &,
		.screen--1 .slide--0 &,
		.screen--2 .slide--0 &,
		.screen--3 .slide--1 &,
		.screen--5 .slide--1 & {
			color: black;

			a {
				background: black;
				color: white;
			}
		}

		.screen--1 .slide--1 &,
		.screen--3 .slide--0 &,
		.screen--4 .slide--0 &,
		.screen--5 .slide--0 & {
			color: white;

			a {
				background: white;
				color: black;
			}
		}
		
	}
	.title {
		font: bold 30px/1.4 $font-accent;
		margin-bottom: 0.5em;
	}
	.text {
		font: 22px/1.5 $font-base;
	}

	&__trigger {
		font: 22px/1 $font-base;
		color: black;
		size(22px);
		border-radius: 50%;
		text-align: center;
		vertical-align: middle;
		background: white;
		absolute();
		cursor: pointer;

		&::before {
			content: '';
			display: block;
			width: 2px;
			absolute(100%, 50%);
			background: white;
			transform-origin: top center;
		}
	}
}

.bgs {
	absolute(0px, 0px);
	size(100%);
}
.screens ~ .screens {
	absolute(0px, 0px);
	size(100%);
	z-index: 10;
}
.anim-bg {
	fixed(40px, 0, 40px);
	size(360px, auto);
	z-index: 9;

	&.ll {
		left: 40px;
		background: rgba(#ffffff, 0.8);
	}

	&.lr {
		right: 40px;
		background: rgba(#ffffff, 0.8);
	}

	&.bl {
		left: 40px;
		background: rgba(#000000, 0.8);
	}

	&.br {
		right: 40px;
		background: rgba(#000000, 0.8);
	}
}